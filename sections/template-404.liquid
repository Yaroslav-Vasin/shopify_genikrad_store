<div class="max-w-md">
  <div class="text-5xl font-bold my-4">
    <h1>{{ section.settings.title }}</h1>
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
  </div>
  {% if section.settings.button_url == blank %}
    {% assign shop_url = shop.secure_url %}
  {% else %}
    {% assign shop_url = section.settings.button_url %}
  {% endif %}
  <div class="my-4">
    <a href="{{ shop_url }}" class=" px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-900 text-white">{{ section.settings.button_label }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex justify-center items-center h-screen text-center py-7",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "404 Heading Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "label": "404 Subtext Title",
      "default": "The page you are looking for does not exist."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "404 Button Label",
      "default": "Go Back"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "404 Button URL"
    }
  ]
}
{% endschema %}