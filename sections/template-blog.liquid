<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_psts %}
    <h1 class="text-3xl font-bold text-center">{{ blog.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div>
            {% if article.image %}
                <img src="{{ article.image | image_url }}" alt="{{ article.image.alt }}" width="200" height="200" loading="eager">
            {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-40' }}
            {% endif %}
            <h1>{{ article.title }}</h1>

            {% if article.excerpt.size > 0 %}
            
            {% else %}
                <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
            {% endif %}
          </div>      
        {% endfor %}
      </div>
    </div>
    
  {% endpaginate %}
</div>



{% schema %}
  {
    "name": "Blog",
    "settings": [
      {
        "type": "range",
        "id": "number_of_blog_psts",
        "label": "Number of posts",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 3
      }
    ]
  }
{% endschema %}